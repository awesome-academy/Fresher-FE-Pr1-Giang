include ../components/navlink

mixin navbar
    nav.header__nav 
        .container
            .d-flex.align-items-center
                button.row.justify-flex-start 
                    i(class="fa-solid fa-bars")
                ul.d-flex.align-items-center.m-0 
                    +navLink('TRANG CHỦ')
                    +navLink('GIỚI THIỆU')
                    li.nav-link
                        a.me-1 SẢN PHẨM
                        i(class="fa-solid fa-caret-down ml-1")
                    li.nav-link
                        a.me-1 SẢN PHẨM MỚI
                        i(class="fa-solid fa-caret-down ml-1")
                    +navLink('TIN TỨC')
                    +navLink('LIÊN HỆ')
                .nav-right
                    button.mr-1 
                        i(class="fa-solid fa-magnifying-glass")
                    button 
                        i(class="fa-solid fa-basket-shopping")
